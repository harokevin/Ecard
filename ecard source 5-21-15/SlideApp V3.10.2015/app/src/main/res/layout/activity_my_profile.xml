<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.dima.slideapp.myProfile"
    >


    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/settings"
        android:id="@+id/setUpAccountButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/contactPicture"
        android:background="@drawable/nullcontact"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact Name"
        android:id="@+id/contactNameMyProfile"
        android:layout_below="@+id/contactPicture"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/showInformationTextView"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/backHome"
        android:background="@drawable/home"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:layout_above="@+id/setUpAccountButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/frameLayout">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageButtonINSTAGRAM"
            android:background="@drawable/instagram"
            android:layout_above="@+id/imageButtonEMAIL"
            android:layout_alignRight="@+id/imageButtonEMAIL"
            android:layout_alignEnd="@+id/imageButtonEMAIL"
            android:layout_gravity="left|top" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/snapchat"
            android:id="@+id/imageButtonSNAPCHAT"
            android:layout_below="@+id/contactNameMyProfile"
            android:layout_alignLeft="@+id/contactPicture"
            android:layout_alignStart="@+id/contactPicture"
            android:layout_gravity="center_horizontal|top" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageButtonFACEBOOK"
            android:background="@drawable/facebook"
            android:layout_alignTop="@+id/imageButtonPHONENUMBER"
            android:layout_toRightOf="@+id/imageButtonPHONENUMBER"
            android:layout_toEndOf="@+id/imageButtonPHONENUMBER"
            android:layout_gravity="right|top" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButtonEMAIL"
            android:background="@drawable/mail"
            android:layout_below="@+id/contactPicture"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|center_vertical" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButtonPHONENUMBER"
            android:background="@drawable/phone"
            android:layout_below="@+id/contactNameMyProfile"
            android:layout_toRightOf="@+id/showInformationTextView"
            android:layout_toEndOf="@+id/showInformationTextView"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>
