<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.dima.slideapp.myProfile"
    >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Account"
        style="@style/btnStyleGenoa"
        android:id="@+id/setUpAccountButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/contactPicture"
        android:background="@drawable/nullcontact"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact Name"
        android:id="@+id/contactNameMyProfile"
        android:layout_below="@+id/contactPicture"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButtonPHONENUMBER"
        android:background="@drawable/phone"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/contactNameMyProfile"
        android:layout_toLeftOf="@+id/contactPicture"
        android:layout_toStartOf="@+id/contactPicture" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/snapchat"
        android:id="@+id/imageButtonSNAPCHAT"
        android:layout_alignTop="@+id/imageButtonINSTAGRAM"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButtonINSTAGRAM"
        android:background="@drawable/instagram"
        android:layout_above="@+id/imageButtonFACEBOOK"
        android:layout_toRightOf="@+id/contactPicture"
        android:layout_toEndOf="@+id/contactPicture" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButtonFACEBOOK"
        android:background="@drawable/facebook"
        android:layout_below="@+id/imageButtonPHONENUMBER"
        android:layout_toLeftOf="@+id/imageButtonSNAPCHAT"
        android:layout_toStartOf="@+id/imageButtonSNAPCHAT" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButtonEMAIL"
        android:background="@drawable/mail"
        android:layout_toRightOf="@+id/imageButtonSNAPCHAT"
        android:layout_alignRight="@+id/imageButtonINSTAGRAM"
        android:layout_alignEnd="@+id/imageButtonINSTAGRAM"
        android:layout_above="@+id/showInformationTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/showInformationTextView"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/imageButtonFACEBOOK"
        android:layout_alignRight="@+id/imageButtonSNAPCHAT"
        android:layout_alignEnd="@+id/imageButtonSNAPCHAT" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My People"
        android:id="@+id/backToMyPeople"
        style="@style/btnStyleGenoa"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imageButtonSNAPCHAT"
        android:layout_toStartOf="@+id/imageButtonSNAPCHAT" />

</RelativeLayout>
