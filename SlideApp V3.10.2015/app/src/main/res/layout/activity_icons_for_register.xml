<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dima.slideapp.iconsForRegister">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        style="@style/btnStyleGenoa"
        android:id="@+id/iconsForRegisterButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/facebook"
        android:id="@+id/facebookIconButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/iconsForRegisterButton"
        android:layout_toStartOf="@+id/iconsForRegisterButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/snapchatIConButton"
        android:background="@drawable/snapchat"
        android:layout_alignTop="@+id/facebookIconButton"
        android:layout_toRightOf="@+id/iconsForRegisterButton"
        android:layout_toEndOf="@+id/iconsForRegisterButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/phone"
        android:id="@+id/phoneIconButton"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/snapchatIConButton"
        android:layout_toRightOf="@+id/iconsForRegisterButton"
        android:layout_toEndOf="@+id/iconsForRegisterButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/mail"
        android:id="@+id/emailButton"
        android:layout_above="@+id/iconsForRegisterButton"
        android:layout_alignLeft="@+id/iconsForRegisterButton"
        android:layout_alignStart="@+id/iconsForRegisterButton"
        android:layout_marginBottom="46dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/instagram"
        android:id="@+id/instagramButton"
        android:layout_alignTop="@+id/phoneIconButton"
        android:layout_toLeftOf="@+id/iconsForRegisterButton"
        android:layout_toStartOf="@+id/iconsForRegisterButton" />


</RelativeLayout>
